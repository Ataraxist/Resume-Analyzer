# O*NET API v2 Key
# Get your API key at: https://services.onetcenter.org/reference
ONET_API_KEY=your_onet_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DB_PATH=./data/onet_cache.db

# API Rate Limiting
MAX_CONCURRENT_REQUESTS=10
REQUEST_DELAY_MS=50

# CORS
CORS_ORIGIN=http://localhost:5173

# OpenAI Configuration for Resume Parsing
OPENAI_API_KEY=your_openai_api_key_here
# Alternative: Use YAML_KEY if you have it from legacy system
# YAML_KEY=your_openai_api_key_here

# OpenAI Model Configuration
# Model for initial resume parsing (fast, cost-effective, accurate)
# Options: gpt-5-mini (recommended), gpt-5-nano (cheapest), gpt-4o-mini
OPENAI_PARSING_MODEL=gpt-5-mini
# Model for job fit analysis (more sophisticated, better quality)
# Options: gpt-5 (recommended), gpt-5-mini, gpt-4o, gpt-4-turbo-preview
OPENAI_ANALYSIS_MODEL=gpt-5

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,docx,txt

# JWT Configuration (for user authentication)
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# Session Configuration (for session cookies)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_session_secret_here_min_32_chars